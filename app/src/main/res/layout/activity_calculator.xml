<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anupam.simplecalci.Calculator"
    android:background="#2186c0">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/num1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/num2"
        android:layout_toRightOf="@+id/num1"
        android:background="#1286c0" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/num3"
        android:layout_toRightOf="@+id/num2"
        android:layout_toEndOf="@+id/num2"
        android:background="#ffffff" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/num4"
        android:layout_below="@+id/num1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1286c0" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/num5"
        android:layout_alignTop="@+id/num4"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1"
        android:background="#ffffff" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/num6"
        android:layout_alignTop="@+id/num5"
        android:layout_toRightOf="@+id/num5"
        android:layout_toEndOf="@+id/num5"
        android:background="#1286c0" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/num7"
        android:layout_below="@+id/num4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/num8"
        android:layout_below="@+id/num5"
        android:layout_toRightOf="@+id/num4"
        android:layout_toEndOf="@+id/num4"
        android:background="#1286c0" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/num9"
        android:layout_alignTop="@+id/num8"
        android:layout_toRightOf="@+id/num8"
        android:layout_toEndOf="@+id/num8"
        android:background="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/Clear"
        android:layout_below="@+id/num7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1286c0" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/num0"
        android:layout_alignTop="@+id/Clear"
        android:layout_toRightOf="@+id/Clear"
        android:layout_toEndOf="@+id/Clear"
        android:background="#ffffff" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/Equal"
        android:layout_alignTop="@+id/num0"
        android:layout_toRightOf="@+id/num0"
        android:layout_toEndOf="@+id/num0"
        android:background="#1286c0" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/Add"
        android:layout_above="@+id/num6"
        android:layout_toRightOf="@+id/num3"
        android:layout_toEndOf="@+id/num3"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:background="#1286c0" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/Subtract"
        android:layout_alignBottom="@+id/num6"
        android:layout_toRightOf="@+id/num3"
        android:layout_toEndOf="@+id/num3"
        android:background="#ffffff" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/Multiply"
        android:layout_above="@+id/Equal"
        android:layout_toRightOf="@+id/num6"
        android:layout_toEndOf="@+id/num6"
        android:background="#1286c0" />

    <Button
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/Divide"
        android:layout_below="@+id/num9"
        android:layout_toRightOf="@+id/num9"
        android:layout_toEndOf="@+id/num9"
        android:background="#ffffff" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp"
        android:background="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/Editable" />
</RelativeLayout>
